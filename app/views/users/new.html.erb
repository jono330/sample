<h1>So you want to join . . .</h1>
<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>
	<div class ="field">
		<%= f.label :name %>
		<%= f.text_field :name %><br />
	</div>
	<div class ="field">
		<%= f.label :email %>
		<%= f.text_field :email %><br />
	</div>
	<div class ="field">
		<%= f.label :password %>
		<%= f.password_field :password %><br />
	</div>
	<div class ="field">
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %><br />
	</div>
	<div class ="actions">
		<%= f.submit "Sign up. . ." %>
	</div>
<% end %>